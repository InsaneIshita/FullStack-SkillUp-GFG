<!DOCTYPE html>
<html>
<head>
    <title>Vmeet - Join or Create Call</title>
    <style>
        body {
            background: black;
            color: white;
            font-family: Arial;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .box {
            background: #111;
            padding: 30px;
            border-radius: 12px;
            text-align: center;
            width: 300px;
        }

        input {
            width: 100%;
            padding: 10px;
            margin: 10px 10px 10px -10px;
            border-radius: 8px;
            border: none;
        }

        button {
            width: 100%;
            padding: 10px;
            border-radius: 20px;
            border: none;
            margin-top: 10px;
            font-weight: bold;
            cursor: pointer;
        }

        .join {
            
            background: #93b2ff;
            color: #0048ff;
        }

            .join:hover {
                background: #719aff;
            color: blue;
            }

        .create {
            
            background: #ff6b6b;
            color: white;
        }

        .create:hover {
            background: #ff4c4c;
                color: white;
        }
    </style>
</head>

<body>
<div class="box">
    <h2>Welcome to Vmeet</h2>
    <p>Meet without limits.</p>

    <input id="nameInput" placeholder="Enter Your Name" />
    <input id="roomInput" placeholder="Enter Room Code" />

    <button class="join" onclick="joinRoom()">Join Room</button>
    <button class="create" onclick="createRoom()">Create New Room</button>
</div>

<script>
    function joinRoom() {
    const room = document.getElementById("roomInput").value.trim();
    const name = document.getElementById("nameInput").value.trim();

    if (room && name) {
        window.location.href = `/room/${room}?name=${encodeURIComponent(name)}`;
    }
}

function createRoom() {
    const name = document.getElementById("nameInput").value.trim();
    if (!name) return;

    window.location.href =
        `/room/${crypto.randomUUID()}?name=${encodeURIComponent(name)}`;
}

</script>

</body>
</html>
